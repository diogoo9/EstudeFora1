<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/torre"
    android:orientation="vertical"
    tools:context="com.example.android.estudefora.MenuActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="35dp"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="    Você sabia que você pode estudar fora do Brasil, esse aplicativo vai ter ajudar a tirar suas dúvidas" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Iniciar"
        android:textColor="#ffffff"
        android:background="#1e90ff"
        android:onClick="inicio"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="  Como Usar  "
        android:layout_margin="16dp"
        android:textColor="#ffffff"
        android:background="#1e90ff"
        android:onClick="comousar1"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="  Sobre nós  "
        android:layout_margin="16dp"
        android:textColor="#ffffff"
        android:background="#1e90ff"
        android:onClick="moreinfo"/>

</LinearLayout>
